<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.Pane?>

<BorderPane fx:id="mainPane" xmlns:fx="http://javafx.com/fxml" fx:controller="com.github.estebangmz666.controller.GraphController"
>
    <left>
        <VBox spacing="10" alignment="CENTER">
            <TextField fx:id="nodeNameField" promptText="Nombre del nodo" />
            <TextField fx:id="edgeWeightField" promptText="Peso de la arista" />
            <Button text="Agregar Nodo" onAction="#handleAddNode" />
            <Button text="Agregar Arista" onAction="#enableAddEdgeMode" />
            <Button text="Dijkstra" onAction="#handleDijkstra" />
            <Button text="Floyd-Warshall" onAction="#handleFloydWarshall" />
            <Label fx:id="messageLabel" text="Bienvenido!"/>
        </VBox>
    </left>
    <center>
        <Pane fx:id="graphPane" prefWidth="400" prefHeight="400" style="-fx-background-color: lightgray;" />
    </center>
</BorderPane>
